<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="interfaceG.MainPage">

    <Grid HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid x:Name="grilleJoueur1" HeightRequest="500" WidthRequest="500" Grid.Row="0" Grid.Column="0">
            <!-- Contenu de la grille pour le joueur 1 -->
        </Grid>

        <BoxView WidthRequest="50" Grid.Row="0" Grid.Column="1" />

        <Grid x:Name="grilleJoueur2" HeightRequest="500" WidthRequest="500" Grid.Row="0" Grid.Column="2">
            <!-- Contenu de la grille pour le joueur 2 -->
        </Grid>

    </Grid>

</ContentPage>
